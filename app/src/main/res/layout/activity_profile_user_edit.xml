<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User_Setting.Profile_user_edit">
    <LinearLayout
        android:background="#FFFFFF"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/linearLayout1"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profile_user_edit_back"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="25dp"
            android:layout_height="25dp"></ImageView>
        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="Change Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <TextView
        android:background="@drawable/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"></TextView>
    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/txt_update_avt"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Thay đổi ảnh đại diện"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginLeft="20dp"
        android:background="@drawable/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"></TextView>
    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/txt_update_cover"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Thay đổi ảnh bìa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginLeft="20dp"
        android:background="@drawable/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"></TextView>
    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/txt_update_name"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Cập nhật tên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginLeft="20dp"
        android:background="@drawable/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"></TextView>
    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/txt_update_gender"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Thay đổi giới tính"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginLeft="20dp"
        android:background="@drawable/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"></TextView>
    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/txt_update_birthday"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Cập nhật ngày sinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginLeft="20dp"
        android:background="@drawable/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"></TextView>
    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/txt_update_story"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Giới thiệu bản thân"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginLeft="20dp"
        android:background="@drawable/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"></TextView>
    <TextView
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/txt_update_password"
        android:background="@drawable/ripple_effect"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Đổi mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>