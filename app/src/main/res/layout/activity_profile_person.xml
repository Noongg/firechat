<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/profile_user"
    tools:context=".User_Setting.Profile_person">
    <LinearLayout
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/linearLayout1"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profile_user_search_back"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="25dp"
            android:layout_height="25dp"></ImageView>
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_search"
            android:id="@+id/user_search_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="Tìm kiếm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/profile_user_search_img_cover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        android:contentDescription="Ảnh bìa"></ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_user_search_avt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:src="@drawable/ic_baseline_person_24"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profile_user_search_img_cover" />

    <TextView
        android:id="@+id/profile_user_search_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Họ và tên"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_search_avt"></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/txtview1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_search_userName">
        <LinearLayout
            android:id="@+id/linearLayout_add_friend"
            android:gravity="center"
            android:background="@drawable/custom_search"
            android:backgroundTint="#E7EAEC"
            android:layout_width="120dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/profile_user_search_imgadd"
                android:background="@drawable/ic_baseline_person_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>
            <TextView
                android:id="@+id/profile_user_search_txtadd"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:text="Huỷ yêu cầu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_chat"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/custom_search"
            android:backgroundTint="#0099FF"
            android:layout_width="120dp"
            android:layout_height="40dp">
            <ImageView
                android:background="@drawable/ic_baseline_chat_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>
            <TextView
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:text="Nhắn tin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_block"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/custom_search"
            android:backgroundTint="#E7EAEC"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <TextView
                android:paddingBottom="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtview1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"></TextView>
    <TextView
        android:id="@+id/profile_user_search_story"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtview1"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="hahahahahahaha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>