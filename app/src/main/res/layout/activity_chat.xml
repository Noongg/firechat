<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".Main_app.Chat_Activity">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout_top_chat"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_back_chat"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="2"
            android:id="@+id/img_friend_chat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_person_24"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
             />
        <TextView
            android:id="@+id/txt_nameFriend_chat"
            android:maxLength="18"
            android:layout_weight="4"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Họ và tên"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_round_videocam_24"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_phone_24"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_round_info_24"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_chat_Availability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout_top_chat"
        android:background="#008000"
        android:gravity="center"
        android:text="Online"
        android:textColor="#FFFFFF"
        android:visibility="gone"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerview_sent_chat"
        android:layout_below="@+id/txt_chat_Availability"
        android:layout_above="@+id/txtview1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_height="0dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/txtview1"
        android:layout_above="@+id/linearLayout_sent_chat"
        android:background="@drawable/borderbottom"
        android:layout_width="match_parent"
        android:layout_height="3dp"></TextView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout_sent_chat"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/img_menu_chat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_round_menu_24"
            ></ImageView>
        <EditText
            android:layout_weight="8"
            android:id="@+id/edt_sent_chat"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_search"
            android:hint="Aa"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"></EditText>
        <ImageView
            android:layout_weight="1"
            android:id="@+id/img_sent_chat"
            android:src="@drawable/ic_round_send_24"
            android:layout_width="35dp"
            android:layout_height="35dp"></ImageView>
    </LinearLayout>

</RelativeLayout>